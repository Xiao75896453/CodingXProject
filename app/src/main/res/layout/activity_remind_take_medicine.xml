<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:weightSum="6"
    tools:context=".Remind.RemindTakeMedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivRemindTakeMedIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tvRemindTakeMedTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="吃藥"
            android:textSize="35dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/takeMedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bRemindAgain"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="再提醒"
            android:textSize="35dp"
            android:padding="2dp"
            android:background="@drawable/my_button"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.2"/>

        <Button
            android:id="@+id/bTakeMedConfirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_height="50dp"
            android:text="確定"
            android:textSize="35dp"
            android:background="@drawable/my_button"
            android:textColor="@color/white"/>

    </LinearLayout>


</LinearLayout>