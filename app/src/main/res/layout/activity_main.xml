<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/bLoginRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login and Register Page"/>
            <Button
                android:id="@+id/bToDrugTimePage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To DrugTimePage"/>
            <Button
                android:id="@+id/bRecordBloodSugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RecordBloodSugar"/>
            <Button
                android:id="@+id/bRecordBloodPressureDBP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RecordBloodPressureDBP"/>
            <Button
                android:id="@+id/bRecordBloodPressureSBP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RecordBloodPressureSBP"/>
            <Button
                android:id="@+id/bToRemindDrugTaking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To RemindDrugTaking"/>
            <Button
                android:id="@+id/bToRemindRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To RemindRecord"/>
            <Button
                android:id="@+id/bToRemindTakeMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To RemindTakeMed"/>
            <Button
                android:id="@+id/bToSetTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To SetTime"/>
            <Button
                android:id="@+id/bToDetailDrugList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Drug Info"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

